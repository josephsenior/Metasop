# Database (local SQLite â€” no remote server, no extra cost)
DATABASE_URL="file:./prisma/local.db"
# AI/LLM Configuration
# Use one of: GOOGLE_AI_API_KEY, GEMINI_API_KEY, or METASOP_LLM_API_KEY
GOOGLE_AI_API_KEY="your-google-ai-api-key"
METASOP_LLM_PROVIDER="gemini" # Options: gemini, mock
METASOP_LLM_MODEL="gemini-3-flash-preview"

# MetaSOP Agent Settings (Optional)
# METASOP_AGENT_TIMEOUT=300000
# METASOP_AGENT_RETRIES=2

# Environment
NODE_ENV="production"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Security (optional)
# CORS_ALLOWED_ORIGINS="https://your-domain.com"

# Rate Limiting (Optional - for multi-instance deployments)
# REDIS_URL="redis://localhost:6379"
# REDIS_URL="rediss://user:password@host:6379"  # SSL

# Monitoring & Logging
# LOG_LEVEL="info"  # debug, info, warn, error, fatal
# DISABLE_CONSOLE_LOGS="false"
# ENABLE_METRICS="true"
# HEALTH_CHECK_INCLUDE_METRICS="false"

# Error Tracking (Optional)
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
# SENTRY_ENVIRONMENT="production"
