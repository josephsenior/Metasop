# Database Configuration
DATABASE_URL="postgresql://user:@localhost:5432/multiagent?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/multiagent?schema=public"
# AI/LLM Configuration
# Use one of: GOOGLE_AI_API_KEY, GEMINI_API_KEY, or METASOP_LLM_API_KEY
GOOGLE_AI_API_KEY="your-google-ai-api-key"
METASOP_LLM_PROVIDER="gemini" # Options: gemini, mock
METASOP_LLM_MODEL="gemini-3-flash-preview"

# Authentication
JWT_SECRET="your-super-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-change-in-production"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# MetaSOP Agent Settings (Optional)
# METASOP_AGENT_TIMEOUT=300000
# METASOP_AGENT_RETRIES=2

# Environment
NODE_ENV="production"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Email Configuration (for password reset)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT=587
# SMTP_USER="your-user"
# SMTP_PASS="your-password"
# EMAIL_FROM="noreply@example.com"

# Security
# BCRYPT_SALT_ROUNDS=12
# CORS_ALLOWED_ORIGINS="https://your-domain.com"
