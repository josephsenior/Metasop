          "validating",
          "success",
          "error"
        ],
        "variants": [
          "modal",
          "inline"
        ]
      },
      {
        "name": "PriceTicker",
        "description": "A real-time updating text component for asset prices.",
        "props": {
          "symbol": "string",
          "price": "number",
          "previousPrice": "number",
          "currency": "string"
        },
        "states": [
          "flash-up",
          "flash-down",
          "stable"
        ],
        "variants": [
          "large",
          "table-cell",
          "header"
        ]
      }
