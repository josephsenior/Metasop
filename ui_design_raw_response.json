{
  "step_id": "ui_design",
  "role": "UI Designer",
  "content": {
    "summary": "EduPulse UI Architecture: A high-performance, accessible design system optimized for video-centric learning and AI-driven personalization.",
    "description": "The EduPulse design system utilizes a 'Modern Professional' aesthetic, balancing deep indigo trust-tones with vibrant violet accents to signify AI capabilities. It prioritizes a 'Focus Mode' for the learning interface and a 'Data-Rich' density for the instructor dashboard. The system is built for high-concurrency responsiveness and WCAG 2.1 AA compliance.",
    "schema_version": "0.8",
    "component_hierarchy": {
      "root": "App",
      "children": [
        {
          "name": "Layout",
          "props": [
            "theme",
            "userRole"
          ]
        },
        {
          "name": "Navigation",
          "children": [
            {
              "name": "SearchBar",
              "props": [
                "placeholder",
                "onSearch"
              ]
            },
            {
              "name": "UserMenu",
              "props": [
                "avatarUrl",
                "notifications"
              ]
            }
          ]
        },
        {
          "name": "CoursePlayer",
          "children": [
            {
              "name": "VideoEngine",
              "props": [
                "hlsSource",
                "playbackRate"
              ]
            },
            {
              "name": "NoteSidebar",
              "props": [
                "activeTimestamp",
                "notes"
              ]
            },
            {
              "name": "CurriculumAccordion",
              "props": [
                "sections",
                "currentLectureId"
              ]
            }
          ]
        },
        {
          "name": "InstructorDashboard",
          "children": [
            {
              "name": "AnalyticsOverview",
              "props": [
                "revenueData",
                "studentCount"
              ]
            },
            {
              "name": "CourseBuilder",
              "props": [
                "draftId",
                "onSave"
              ]
            }
          ]
        }
      ]
    },
    "design_tokens": {
      "colors": {
        "accent": "#8B5CF6",
        "background": "#F9FAFB",
        "error": "#EF4444",
        "primary": "#4F46E5",
        "secondary": "#10B981",
        "success": "#22C55E",
        "surface": "#FFFFFF",
        "text": "#111827",
        "warning": "#F59E0B"
      },
      "spacing": {
        "2xl": "3rem",
        "lg": "1.5rem",
        "md": "1rem",
        "sm": "0.5rem",
        "xl": "2rem",
        "xs": "0.25rem"
      },
      "typography": {
        "fontFamily": "Inter, system-ui, sans-serif",
        "fontSize": {
          "2xl": "1.5rem",
          "base": "1rem",
          "lg": "1.125rem",
          "sm": "0.875rem",
          "xl": "1.25rem",
          "xs": "0.75rem"
        },
        "fontWeight": {
          "bold": "700",
          "light": "300",
          "medium": "500",
          "normal": "400",
          "semibold": "600"
        },
        "headingFont": "Montserrat, sans-serif"
      },
      "borderRadius": {
        "full": "9999px",
        "lg": "0.75rem",
        "md": "0.5rem",
        "none": "0",
        "sm": "0.25rem"
      },
      "shadows": {
        "inner": "inset 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)"
      }
    },
    "ui_patterns": [
      "Skeleton Loading States",
      "Optimistic UI Updates for Note-taking",
      "Multi-step Checkout Flow",
      "Contextual AI Recommendations",
      "Sticky Video Player with Picture-in-Picture",
      "Drag-and-Drop Curriculum Reordering"
    ],
    "component_specs": [
      {
        "name": "VideoPlayer",
        "description": "Custom HLS-capable video player with timestamped note integration.",
        "props": {
          "src": "string",
          "poster": "string",
          "onProgress": "function",
          "markers": "array",
          "autoPlay": "boolean"
        },
        "states": [
          "playing",
          "paused",
          "buffering",
          "seeking",
          "error"
        ],
        "variants": [
          "standard",
          "mini-player",
          "full-screen"
        ]
      },
      {
        "name": "CourseCard",
        "description": "Primary discovery component for course listings.",
        "props": {
          "title": "string",
          "instructor": "string",
          "rating": "number",
          "price": "number",
          "badge": "string",
          "thumbnail": "string"
        },
        "states": [
          "default",
          "hover",
          "loading"
        ],
        "variants": [
          "grid",
          "list",
          "compact"
        ]
      },
      {
        "name": "ProgressBar",
        "description": "Visual indicator for course completion or video progress.",
        "props": {
          "value": "number",
          "max": "number",
          "color": "string",
          "showLabel": "boolean"
        },
        "states": [
          "active",
          "completed"
        ],
        "variants": [
          "linear",
          "circular"
        ]
      }
    ],
    "layout_breakpoints": {
      "2xl": "1536px",
      "lg": "1024px",
      "md": "768px",
      "sm": "640px",
      "xl": "1280px"
    },
    "accessibility": {
      "aria_labels": true,
      "checklist": [
        "Color contrast ratio >= 4.5:1",
        "Keyboard focus visible on all interactive elements",
        "Screen reader announcements for dynamic content (AI suggestions)",
        "Alt text for all course thumbnails",
        "Captions and transcripts for all video content"
      ],
      "focus_indicators": true,
      "guidelines": [
        "WCAG 2.1 Level AA",
        "WAI-ARIA Authoring Practices"
      ],
      "keyboard_navigation": true,
      "screen_reader_support": true,
      "standard": "WCAG 2.1",
      "wcag_level": "AA"
    },
    "atomic_structure": {
      "atoms": [
        "Button",
        "Input",
        "Badge",
        "Icon",
        "Avatar",
        "Tooltip",
        "Checkbox"
      ],
      "molecules": [
        "SearchBar",
        "RatingStars",
        "NotificationBell",
        "NoteItem",
        "Breadcrumb",
        "FilterChip"
      ],
      "organisms": [
        "CourseGrid",
        "VideoPlayerControls",
        "InstructorSidebar",
        "ReviewSection",
        "CheckoutForm"
      ]
    },
    "website_layout": {
      "pages": [
        {
          "name": "Home",
          "route": "/home",
          "sections": [
            "Hero",
            "FeaturedCourses",
            "Categories",
            "Testimonials"
          ]
        },
        {
          "name": "Course Catalog",
          "route": "/courses",
          "sections": [
            "FilterSidebar",
            "CourseResults",
            "Pagination"
          ]
        },
        {
          "name": "Learning Interface",
          "route": "/learn/:courseId",
          "sections": [
            "VideoPlayer",
            "CurriculumSidebar",
            "Tabs(Notes, Resources, Q&A)"
          ]
        },
        {
          "name": "Instructor Dashboard",
          "route": "/instructor",
          "sections": [
            "StatsOverview",
            "CourseManagementList",
            "RevenueChart"
          ]
        },
        {
          "name": "Checkout",
          "route": "/checkout",
          "sections": [
            "OrderSummary",
            "PaymentGateway",
            "Confirmation"
          ]
        }
      ]
    }
  }
}