    "component_specs": [
      {
        "name": "MetricCard",
        "description": "A compact card displaying a single key metric with a trend indicator.",
        "props": {
          "label": "string",
          "value": "string|number",
          "trend": "number",
          "trendType": "'percent'|'absolute'",
          "loading": "boolean"
        },
        "states": [
          "loading",
          "positive-trend",
          "negative-trend",
          "neutral"
        ],
        "variants": [
          "primary",
          "secondary",
          "compact"
        ]
      },
      {
        "name": "ExchangeConnector",
        "description": "A form component for inputting API keys with validation feedback.",
        "props": {
          "exchangeName": "string",
          "logoUrl": "string",
          "onSubmit": "function",
          "isValidating": "boolean",
          "error": "string"
        },
        "states": [
