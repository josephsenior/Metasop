{
  "step_id": "ui_design",
  "role": "UI Designer",
  "content": {
    "summary": "A high-performance, dark-mode-first financial terminal UI optimized for data density and speed.",
    "description": "The TradePulse design system prioritizes low-latency visual feedback and information density. Using a dark palette (#0B0E11) reduces eye strain for traders. 'JetBrains Mono' is used for all financial data to ensure tabular alignment. The UI is modular, allowing the 'Trading Terminal' to be composed of resizable grid widgets (Chart, Order Book, Depth). Color semantics are strict: Green (#10B981) for positive/buy, Red (#EF4444) for negative/sell.",
    "schema_version": "0.8",
    "component_hierarchy": {
      "root": "TradePulseApp",
      "children": [
        {
          "name": "AuthProvider",
          "children": [
            {
              "name": "MainLayout",
              "props": [
                "userProfile",
                "themeMode"
              ]
            },
            {
              "name": "SidebarNavigation",
              "props": [
                "activeRoute",
                "isCollapsed"
              ]
            },
            {
              "name": "GlobalHeader",
              "props": [
                "marketStatus",
                "notifications"
              ]
            },
            {
              "name": "TradingTerminalPage",
              "props": [
                "activeSymbol",
                "connectionStatus"
              ]
            },
            {
              "name": "MarketTickerHeader",
              "props": [
                "symbol",
                "24hChange",
                "currentPrice"
              ]
            },
            {
              "name": "ChartWidget",
              "props": [
                "symbol",
                "interval",
                "indicators"
              ]
            },
            {
              "name": "OrderBookPanel",
              "props": [
                "bids",
                "asks",
                "spread"
              ]
            },
            {
              "name": "OrderEntryForm",
              "props": [
                "orderType",
                "availableBalance",
                "onSubmit"
              ]
            },
            {
              "name": "ActiveOrdersTable",
              "props": [
                "orders",
                "onCancel"
              ]
            }
          ]
        }
      ]
    },
    "design_tokens": {
      "colors": {
        "accent": "#3B82F6",
        "background": "#0B0E11",
        "error": "#EF4444",
        "primary": "#2563EB",
        "secondary": "#64748B",
        "success": "#10B981",
        "surface": "#151A21",
        "text": "#F3F4F6",
        "warning": "#F59E0B"
      },
      "spacing": {
        "2xl": "48px",
        "lg": "24px",
        "md": "16px",
        "sm": "8px",
        "xl": "32px",
        "xs": "4px"
      },
      "typography": {
        "fontFamily": "Inter, system-ui, sans-serif",
        "fontSize": {
          "2xl": "24px",
          "base": "16px",
          "lg": "18px",
          "sm": "14px",
          "xl": "20px",
          "xs": "12px"
        },
        "fontWeight": {
          "bold": "700",
          "light": "300",
          "medium": "500",
          "normal": "400",
          "semibold": "600"
        },
        "headingFont": "JetBrains Mono, monospace"
      },
      "borderRadius": {
        "full": "9999px",
        "lg": "12px",
        "md": "8px",
        "none": "0px",
        "sm": "4px"
      },
      "shadows": {
        "inner": "inset 0 2px 4px 0 rgb(0 0 0 / 0.05)",
        "lg": "0 10px 15px -3px rgb(0 0 0 / 0.5)",
        "md": "0 4px 6px -1px rgb(0 0 0 / 0.3)",
        "sm": "0 1px 2px 0 rgb(0 0 0 / 0.3)"
      }
    },
    "ui_patterns": [
      "Skeleton Loading States",
      "Real-time Data Streaming (WebSocket)",
      "Optimistic UI Updates",
      "Dashboard Grid Layout",
      "Modal Overlays for Auth",
      "Toast Notifications"
    ],
    "component_specs": [
      {
        "name": "OrderEntryForm",
        "description": "Primary input mechanism for executing trades. Supports Limit and Market orders.",
        "props": {
          "symbol": "string",
          "availableBalance": "number",
          "currentPrice": "number",
          "onSubmit": "function",
          "isLoading": "boolean"
        },
        "states": [
          "idle",
          "validating",
          "submitting",
          "success",
          "error"
        ],
        "variants": [
          "buy-side",
          "sell-side",
          "compact",
          "expanded"
        ]
      },
      {
        "name": "ChartWidget",
        "description": "Wrapper around Lightweight Charts library for candlestick visualization.",
        "props": {
          "symbol": "string",
          "interval": "enum(1m,5m,1h,1d)",
          "data": "array",
          "indicators": "string[]"
        },
        "states": [
          "loading",
          "streaming",
          "disconnected",
          "historical-fetch"
        ],
        "variants": [
          "candlestick",
          "line",
          "area"
        ]
      },
      {
        "name": "OrderBook",
        "description": "Visualizes the depth of market with bids and asks lists.",
        "props": {
          "bids": "array",
          "asks": "array",
          "depth": "number",
          "spread": "number",
          "symbol": "string"
        },
        "states": [
          "active",
          "stale",
          "connecting"
        ],
        "variants": [
          "standard",
          "depth-visualizer",
          "vertical-split"
        ]
      },
      {
        "name": "PortfolioSummaryCard",
        "description": "High-level view of total net worth and 24h performance.",
        "props": {
          "totalValueUsd": "number",
          "changePercent": "number",
          "allocation": "object[]",
          "isHidden": "boolean"
        },
        "states": [
          "loading",
          "loaded",
          "error"
        ],
        "variants": [
          "dashboard-hero",
          "sidebar-mini"
        ]
      },
      {
        "name": "ExchangeConnectionModal",
        "description": "Form to securely input API keys for external exchanges.",
        "props": {
          "isOpen": "boolean",
          "supportedExchanges": "string[]",
          "onConnect": "function",
          "error": "string"
        },
        "states": [
          "input",
          "verifying",
          "success",
          "permission-error"
        ],
        "variants": [
          "default"
        ]
      }
    ],
    "layout_breakpoints": {
      "2xl": "1536px",
      "lg": "1024px",
      "md": "768px",
      "sm": "640px",
      "xl": "1280px"
    },
    "accessibility": {
      "aria_labels": true,
      "checklist": [
        "Color contrast > 4.5:1",
        "Focus visible on inputs",
        "Semantic HTML structure",
        "Alt text for charts"
      ],
      "focus_indicators": true,
      "guidelines": [
        "Use ARIA live regions for price updates",
        "Ensure keyboard navigation for order form",
        "Avoid color-only status indicators"
      ],
      "keyboard_navigation": true,
      "screen_reader_support": true,
      "standard": "WCAG 2.1",
      "wcag_level": "AA"
    },
    "atomic_structure": {
      "atoms": [
        "Button",
        "Input",
        "Label",
        "Badge",
        "Spinner",
        "Icon",
        "Toggle"
      ],
      "molecules": [
        "FormField",
        "TickerRow",
        "StatCard",
        "TabGroup",
        "AlertBanner",
        "PriceTag"
      ],
      "organisms": [
        "OrderForm",
        "OrderBook",
        "PortfolioTable",
        "NavBar",
        "ChartContainer",
        "ExchangeList"
      ]
    },
    "website_layout": {
      "pages": [
        {
          "name": "Dashboard",
          "route": "/dashboard",
          "sections": [
            "GlobalHeader",
            "PortfolioHero",
            "AssetAllocationChart",
            "RecentActivity"
          ]
        },
        {
          "name": "Trading Terminal",
          "route": "/trade/:symbol",
          "sections": [
            "MarketHeader",
            "ChartWidget",
            "OrderBook",
            "OrderEntryForm",
            "TradeHistory"
          ]
        },
        {
          "name": "Portfolio",
          "route": "/portfolio",
          "sections": [
            "NetWorthSummary",
            "AssetTable",
            "ExchangeBreakdown",
            "ExportTools"
          ]
        },
        {
          "name": "Settings",
          "route": "/settings",
          "sections": [
            "ProfileSettings",
            "APIKeyManager",
            "SecuritySettings",
            "NotificationPrefs"
          ]
        }
      ]
    }
  }
}